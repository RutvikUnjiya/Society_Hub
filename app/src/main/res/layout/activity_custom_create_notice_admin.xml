<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background"
    tools:context=".CustomCreateNoticeAdmin">
   <CheckBox
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="15dp"
       android:id="@+id/rv_admin_create_notice_checkbox"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:id="@+id/rv_admin_create_notice_name_tv"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_create_notice_checkbox"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rv_admin_create_notice_name_et"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_create_notice_name_tv"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:id="@+id/rv_admin_create_notice_address_tv"
        app:layout_constraintStart_toEndOf="@id/rv_admin_create_notice_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_create_notice_name_tv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:id="@+id/rv_admin_create_notice_address_et"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_create_notice_address_tv"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_create_notice_name_et"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/teal_700"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:id="@+id/rv_admin_create_notice_line"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_create_notice_checkbox"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_create_notice_address_tv"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/rv_admin_create_notice_phone_iv"
        app:layout_constraintStart_toEndOf="@id/rv_admin_create_notice_checkbox"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_create_notice_line"
        android:src="@drawable/ic_baseline_smartphone_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_admin_create_notice_phone_et"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_create_notice_phone_iv"
        app:layout_constraintTop_toBottomOf="@id/rv_admin_create_notice_line"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:id="@+id/rv_admin_create_notice_call_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_admin_create_notice_line"
        android:src="@drawable/ic_baseline_phone_24"/>


</androidx.constraintlayout.widget.ConstraintLayout>