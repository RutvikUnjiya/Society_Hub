<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_background"
    tools:context=".CustomNoticeInformationAdmin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="25dp"
        android:id="@+id/rv_admin_notice_information_name_tv"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:id="@+id/rv_admin_notice_information_name_et"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_notice_information_name_tv"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:id="@+id/rv_admin_notice_information_address_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_notice_information_name_tv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:inputType="textMultiLine"
        android:id="@+id/rv_admin_notice_information_address_et"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_notice_information_address_tv"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_notice_information_name_et"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/teal_700"
        android:layout_margin="10dp"
        android:id="@+id/rv_admin_notice_information_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_notice_information_address_tv"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/rv_admin_notice_information_phone_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_admin_notice_information_line"
        android:src="@drawable/ic_baseline_smartphone_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_admin_notice_information_phone_et"
        android:inputType="number"
        android:layout_margin="3dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/rv_admin_notice_information_phone_iv"
        app:layout_constraintTop_toBottomOf="@id/rv_admin_notice_information_line"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:id="@+id/rv_admin_notice_information_call_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_admin_notice_information_line"
        android:src="@drawable/ic_baseline_phone_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>